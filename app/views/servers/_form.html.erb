    <ul>
    <% server.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(server, html: {class: "pure-form pure-form-aligned"}) do |f| %>
  <fieldset>
    <div class="pure-control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="pure-control-group">
      <%= f.label :ip %>
      <%= f.text_field :ip %>
    </div>

    <div class="pure-control-group">
      <%= f.label :server_type %>
      <%= f.select :server_type, Server::SERVER_TYPES %>
    </div>

    <div class="pure-controls">
      <%= f.submit "Submit", class: "pure-button pure-button-primary" %>
    </div>
  </fieldset>
<% end %>
