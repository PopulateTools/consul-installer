<h1>Sites</h1>

<table class="pure-table pure-table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Host</th>
      <th>Base path</th>
      <th>Rails env</th>
      <th>Web server</th>
      <th>App server</th>
      <th>Db server</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= link_to site.host, "https://#{site.host}" %></td>
        <td><%= site.base_path %></td>
        <td><%= site.rails_env %></td>
        <td><%= site.web_server.try(:name) %></td>
        <td><%= site.app_server.try(:name) %></td>
        <td><%= site.db_server.try(:name) %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
